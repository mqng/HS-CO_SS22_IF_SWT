<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <welcome-file-list>
        <welcome-file>start.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>produktseite1</servlet-name>
        <jsp-file>/a1.jsp</jsp-file>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>produktseite1</servlet-name>
        <url-pattern>/produktseite1</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>produktseite2</servlet-name>
        <jsp-file>/a2.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>produktseite2</servlet-name>
        <url-pattern>/produktseite2</url-pattern>
    </servlet-mapping>
</web-app>
